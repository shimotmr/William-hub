{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Growth API Response Schema",
  "type": "object",
  "required": ["trend", "summary"],
  "properties": {
    "trend": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "count"],
        "properties": {
          "date": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "count": {
            "type": "number",
            "minimum": 0
          }
        }
      },
      "minItems": 30,
      "maxItems": 30
    },
    "summary": {
      "type": "object",
      "required": ["total", "avgPerDay", "cumulative"],
      "properties": {
        "total": {
          "type": "number",
          "minimum": 0
        },
        "avgPerDay": {
          "type": "number",
          "minimum": 0
        },
        "cumulative": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          },
          "minItems": 30,
          "maxItems": 30
        }
      }
    }
  }
}
